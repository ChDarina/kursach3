@page
@model kursach3.Pages.CreateModel

<h4>Feed</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feed.Title" class="control-label"></label>
                <input asp-for="Feed.Title" class="form-control" />
                <span asp-validation-for="Feed.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feed.Content" class="control-label"></label>
                <input asp-for="Feed.Content" class="form-control" />
                <span asp-validation-for="Feed.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
