@page
@model kursach3.Pages.RolePlay.EditCharacterModel

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Character.UserId" />
            <input type="hidden" asp-for="Character.RolePlayId" />
            <div class="form-group">
                <label asp-for="Character.СharacterName" class="control-label"></label>
                <input asp-for="Character.СharacterName" class="form-control" />
                <span asp-validation-for="Character.СharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details" asp-route-id="@Model.Character.RolePlayId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
